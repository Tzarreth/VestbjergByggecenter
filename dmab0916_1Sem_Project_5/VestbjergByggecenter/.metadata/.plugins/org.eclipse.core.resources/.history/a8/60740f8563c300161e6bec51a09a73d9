package ui;

import java.awt.BorderLayout;
import java.awt.EventQueue;

import javax.swing.JFrame;
import javax.swing.JPanel;
import javax.swing.border.EmptyBorder;
import javax.swing.JMenuBar;
import javax.swing.JMenu;
import javax.swing.JPopupMenu;
import java.awt.Component;
import java.awt.event.MouseAdapter;
import java.awt.event.MouseEvent;
import javax.swing.event.MenuListener;
import javax.swing.event.MenuEvent;
import javax.swing.JMenuItem;
import javax.swing.JLabel;
import java.awt.FlowLayout;
import java.awt.event.ActionListener;
import java.awt.event.ActionEvent;
import javax.swing.JLayeredPane;

public class OrderGUI extends JFrame {

	private JLayeredPane contentPane;
	private JLayeredPane panelCreateOrder;

	/**
	 * Launch the application.
	 */
	public static void main(String[] args) {
		EventQueue.invokeLater(new Runnable() {
			public void run() {
				try {
					OrderGUI frame = new OrderGUI();
					frame.setVisible(true);
				} catch (Exception e) {
					e.printStackTrace();
				}
			}
		});
	}

	/**
	 * Create the frame.
	 */
	public OrderGUI() {
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		setBounds(100, 100, 745, 401);
		
		JMenuBar menuBar = new JMenuBar();
		setJMenuBar(menuBar);
		
		JMenu mnOrdre = new JMenu("Ordre");
		menuBar.add(mnOrdre);
		
		JMenuItem mnOpretOrdre = new JMenuItem("Opret ordre");
		mnOpretOrdre.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent arg0) {
				panelCreateOrder.setVisible(true);
			}
		});
		mnOpretOrdre.setMnemonic('o');
		mnOrdre.add(mnOpretOrdre);
		
		JMenuItem mnVisAlleOrdrer = new JMenuItem("Vis alle ordrer");
		mnVisAlleOrdrer.setMnemonic('v');
		mnOrdre.add(mnVisAlleOrdrer);
		contentPane = new JLayeredPane();
		contentPane.setBorder(new EmptyBorder(5, 5, 5, 5));
		setContentPane(contentPane);
		
		panelCreateOrder = new JLayeredPane();
		panelCreateOrder.setBounds(0, 0, 722, 323);
		contentPane.setLayout(null);
		
		JLayeredPane panelShowOrders = new JLayeredPane();
		panelShowOrders.setBounds(0, 315, 722, -309);
		contentPane.add(panelShowOrders);
		panelShowOrders.setLayout(null);
		contentPane.add(panelCreateOrder);
		panelCreateOrder.setLayout(null);
		
		JLabel lblMegaFedTest = new JLabel("Mega fed test");
		lblMegaFedTest.setBounds(319, 5, 78, 16);
		panelCreateOrder.add(lblMegaFedTest);
	}
}
