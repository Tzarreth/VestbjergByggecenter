		scrollPane.setViewportView(tableOrder);
		tableOrder.setModel(myTable);

		btnFjern = new JButton("Fjern");
		btnFjern.setEnabled(false);

		btnFjern.setBounds(670, 466, 70, 16);
		contentPane.add(btnFjern);
	}

