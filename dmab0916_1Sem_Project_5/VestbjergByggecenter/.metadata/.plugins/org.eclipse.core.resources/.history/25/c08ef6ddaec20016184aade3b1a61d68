package ui;

import java.awt.BorderLayout;
import java.awt.EventQueue;

import javax.swing.JFrame;
import javax.swing.JPanel;
import javax.swing.border.EmptyBorder;
import javax.swing.JMenuBar;
import javax.swing.JMenu;
import javax.swing.JPopupMenu;
import java.awt.Component;
import java.awt.event.MouseAdapter;
import java.awt.event.MouseEvent;
import javax.swing.event.MenuListener;
import javax.swing.event.MenuEvent;
import javax.swing.JMenuItem;
import javax.swing.JLabel;
import java.awt.FlowLayout;

public class OrderGUI extends JFrame {

	private JPanel contentPane;

	/**
	 * Launch the application.
	 */
	public static void main(String[] args) {
		EventQueue.invokeLater(new Runnable() {
			public void run() {
				try {
					OrderGUI frame = new OrderGUI();
					frame.setVisible(true);
				} catch (Exception e) {
					e.printStackTrace();
				}
			}
		});
	}

	/**
	 * Create the frame.
	 */
	public OrderGUI() {
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		setBounds(100, 100, 745, 401);
		
		JMenuBar menuBar = new JMenuBar();
		setJMenuBar(menuBar);
		
		JMenu mnOrdre = new JMenu("Ordre");
		menuBar.add(mnOrdre);
		
		JMenuItem mnOpretOrdre = new JMenuItem("Opret ordre");
		mnOpretOrdre.setMnemonic('o');
		mnOrdre.add(mnOpretOrdre);
		
		JMenuItem mnVisAlleOrdrer = new JMenuItem("Vis alle ordrer");
		mnVisAlleOrdrer.setMnemonic('v');
		mnOrdre.add(mnVisAlleOrdrer);
		contentPane = new JPanel();
		contentPane.setVisible(true);
		contentPane.setBorder(new EmptyBorder(5, 5, 5, 5));
		setContentPane(contentPane);
		contentPane.setLayout(new BorderLayout(0, 0));
		
		JPanel createOrderPanel = new JPanel();
		createOrderPanel.setVisible(false);
		contentPane.add(createOrderPanel);
		
		JLabel lblMegaFedTest = new JLabel("Mega fed test");
		createOrderPanel.add(lblMegaFedTest);
	}
}
